{
  // 設定儲存時自動格式化
  "editor.formatOnSave": true,
  // 設定預設的格式化工具為 Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // 儲存時自動執行 ESLint 修正
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // 確保 ESLint 支援的語言
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
